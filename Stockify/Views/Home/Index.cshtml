@{
    ViewBag.Title = "";
}

<div class="container">

    <h1>@ViewBag.Title</h1>

    <p>Welcome to your personal finance dashboard! Here you can keep track of your finances and spending.</p>

    <hr />

    <div class="row">

        <div class="col-md-6">

            <div class="card">

                <div class="card-header bg-info text-white" font-weight: bold>

                    Manage Organisations

                </div>

                <div class="card-body">

                    <a asp-controller="Organisation" asp-action="Create" class="btn btn-info">Create New Organisation</a>&nbsp;&nbsp;&nbsp;

                    <a asp-controller="Organisation" asp-action="ListOrganisations" class="btn btn-info">View My Organisations</a>

                </div>

            </div>

        </div>

    </div>

    <br />

</div>



@section styles {

    <link href="~/css/site.css" rel="stylesheet" />

}