<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>Stockify</title>*@

    @if (ViewContext.RouteData.Values["action"].ToString() != "InitDashboard")
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }

    <link rel="stylesheet" href="~/css/style.css" />



    <!--
      - favicon
    -->
    <link rel="shortcut icon" href="~images/favicon.svg" type="image/svg+xml">

    <!--
      - google font link
    -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;900&display=swap"
          rel="stylesheet">

    <!--
      - material icon link
    -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
          rel="stylesheet" />

</head>

<body>

    <header class="header" data-header>
        <div class="container">

            <h1>
                <a href="#" class="logo">Stockify</a>
            </h1>

            <button class="menu-toggle-btn icon-box" data-menu-toggle-btn aria-label="Toggle Menu">
                <span class="material-symbols-rounded  icon">menu</span>
            </button>

            <nav class="navbar">
                <div class="container">

                    <ul class="navbar-list">

                        <li>
                            <a class="navbar-link active icon-box" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="material-symbols-rounded  icon">grid_view</span>

                                <span>Home</span>
                            </a>
                        </li>

                        <li>
                            <a class="navbar-link icon-box" asp-area="" asp-controller="Organisation" asp-action="ListOrganisations">
                                <span class="material-symbols-rounded  icon">list</span>

                                <span>Organisations</span>
                            </a>
                        </li>

                        @*<li>
                            <a class="navbar-link icon-box" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="material-symbols-rounded  icon">bar_chart</span>

                                <span>Track Inventory</span>
                            </a>
                        </li>*@

                        <li>
                            <a class="navbar-link icon-box" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="material-symbols-rounded  icon">bar_chart</span>

                                <span>Get Report</span>
                            </a>
                        </li>

                    </ul>

                    <ul class="user-action-list">

                        <li>
                            <a class="notification icon-box" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="material-symbols-rounded  icon">settings</span>
                            </a>
                        </li>

                        <li>
                            <a class="header-profile" asp-area="" asp-controller="Home" asp-action="Index">

                                <figure class="profile-avatar">
                                    <img src="~/images/avatar-1.jpg" alt="Elizabeth Foster" width="32" height="32">
                                </figure>

                                <div>
                                    <p class="profile-title">Username</p>

                                    <p class="profile-subtitle">Admin</p>
                                </div>

                            </a>
                        </li>

                    </ul>

                </div>
            </nav>

        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("styles", required: false)
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Stockify <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <!--
      - custom js link
    -->
    <script src="~/js/script.js"></script>
</body>
</html>
